user nginx nginx;
worker_processes auto;

events { worker_connections 1024; }

http {
    include /etc/nginx/mime.types;
	default_type application/octet-stream;
    sendfile off;


    server {
        listen ${NGINX_PORT};

		location / {
			index index.html;
			root ${STATIC_FILES_PATH};
		}

        location ${PROXY_PATH} {
			proxy_pass http://${WEB_HOSTNAME}:${WEB_PORT};
		}
    }
}

